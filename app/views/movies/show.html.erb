<div>
  <h1 class="text-4xl"><%= @movie.title %></h1>
  <div class="mt-3 flex space-x-3">
    <div class="grow flex flex-col space-y-3">
      <%= release_year(@movie.release_year) %>
      <%= runtime(@movie.runtime) %>
    </div>
    <% if @movie.poster_path %>
      <%= image_tag(@movie.poster_url, class: "") %>
    <% end %>
  </div>
  <% if @movie.overview %>
    <div class="mt-5 p-3 rounded-lg bg-gray-50">
      <%= @movie.overview %>
    </div>
  <% end %>
</div>

<div class="my-10 flex space-x-3">
  <%= link_to "Add view", new_movie_watched_path(@movie.tmdb_id) %>
</div>

<% if @watched.any? %>
  <p class="mt-5 pb-5 text-2xl border-b border-b-black">You've watched this movie <%= pluralize(@watched.size, "time") %></p>

  <% @watched.each do |watch| %>
    <%= render partial: "search/row", locals: {
      title: watch.watched_at,
      icon: :chevron
    } %>
  <% end %>
<% end %>
