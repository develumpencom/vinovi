<div class="pb-5 flex items-center justify-between border-b border-b-black">
  <h1 class="text-4xl"><%= @movie.title %></h1>

  <%= link_to new_movie_watched_path(@movie.tmdb_id), class: "hidden! lg:flex! space-x-1 btn" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
    <span>Mark as watched</span>
  <% end %>
</div>


<div class="flex flex-col lg:flex-row lg:space-x-5">
  <div class="lg:w-1/2">

    <div class="mt-3 flex">
      <div class="grow flex flex-col space-y-3 lg:order-2">
        <%= release_year(@movie.release_year) %>
        <%= runtime(@movie.runtime) %>
      </div>

      <% if @movie.poster_path %>
        <%= image_tag(@movie.poster_url, class: "lg:order-1 lg:mr-3") %>
      <% end %>
    </div>

    <% if @movie.overview %>
      <div class="mt-5 p-3 rounded-lg bg-gray-50">
        <%= @movie.overview %>
      </div>
    <% end %>
  </div>

  <div class="lg:w-1/2">
    <%= render "watched" %>
  </div>
</div>