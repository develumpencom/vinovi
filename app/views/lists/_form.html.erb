<div class="my-5">
  <%= form_with(model: list) do |form| %>
    <% if list.errors.any? %>
      <div class="px-3 py-2 rounded-md bg-red-100 text-red-500">
        <% list.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
      </div>
    <% end %>

    <div class="my-3">
      <%= form.text_field :name, placeholder: "Give this list a name", class: "px-2 py-1 border border-black w-full"%>
    </div>
    <%= form.submit class: "btn"%>
  <% end %>
</div>
