<%= render layout: "search/row", locals: {
  image: media["poster_path"] ? "https://image.tmdb.org/t/p/w185#{media["poster_path"]}" : nil,
  title: media["title"],
  icon: :movie,
  url: movie_path(media["id"])
} do %>
    <% if media["release_date"] %>
      <p class="mt-3">Released: <%= media["release_date"] %></p>
    <% end %>
<% end %>
